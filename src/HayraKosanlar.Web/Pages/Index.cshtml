@page
@using Microsoft.AspNetCore.Mvc.Localization
@using HayraKosanlar.Localization
@using Volo.Abp.Users
@model HayraKosanlar.Web.Pages.IndexModel
@inject IHtmlLocalizer<HayraKosanlarResource> L
@inject ICurrentUser CurrentUser
@section styles {
    <abp-style-bundle>
        <abp-style src="/Pages/Index.css" />
    </abp-style-bundle>
}
@section scripts {
    <abp-script-bundle>
        <abp-script src="/Pages/Index.js" />
    </abp-script-bundle>
}
<div class="jumbotron text-center">
    <h1>@L["Welcome"]</h1>
    <div class="row">
        <div class="col-md-6 mx-auto">
            <p>Bu bölümde karşılama mesajı olacak.Bu bölümde karşılama mesajı olacak.Bu bölümde karşılama mesajı olacak.Bu bölümde karşılama mesajı olacak.</p>
            <hr class="my-4" />
        </div>
    </div>
    <abp-button id="NewHelpRequestButton" text="@L["NewHelpRequest"].Value" icon="plus" button-type="Primary" />
    <abp-button id="NewGiveAHandRequestButton" text="@L["NewGiveAHandRequest"].Value" icon="plus" button-type="Primary" />
    @if (!CurrentUser.IsAuthenticated)
    {
<a abp-button="Primary" href="~/Account/Login" class="px-4"><i class="fa fa-sign-in"></i> @L["AdminLogin"]</a>}
</div>