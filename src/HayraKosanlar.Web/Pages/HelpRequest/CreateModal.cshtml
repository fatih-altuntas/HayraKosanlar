@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using HayraKosanlar.Localization
@using HayraKosanlar.Web.Pages.HelpRequest
@inject Microsoft.Extensions.Localization.IStringLocalizer<HayraKosanlarResource> L
@model CreateModalModel
@{ 
    Layout = null;
}
<abp-dynamic-form abp-model="HelpRequest" asp-page="/HelpRequest/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewHelpRequest"].Value"></abp-modal-header>
        <abp-modal-body >
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
<script>
    $('#HelpRequest_Status').css('pointer-events', 'none');
    $('#HelpRequest_Status').parent().css('cursor', 'no-drop');
</script>